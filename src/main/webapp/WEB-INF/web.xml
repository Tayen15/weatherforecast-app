<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  
  <display-name>Weather Forecast Web Application</display-name>

  <!-- Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Weather Servlet -->
  <servlet>
    <servlet-name>WeatherServlet</servlet-name>
    <servlet-class>com.weatherforecast.servlet.WeatherServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>WeatherServlet</servlet-name>
    <url-pattern>/weather</url-pattern>
  </servlet-mapping>

  <!-- Search History Servlet -->
  <servlet>
    <servlet-name>SearchHistoryServlet</servlet-name>
    <servlet-class>com.weatherforecast.servlet.SearchHistoryServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SearchHistoryServlet</servlet-name>
    <url-pattern>/history</url-pattern>
  </servlet-mapping>

  <!-- Weather API Servlet (JSON API for Postman testing) -->
  <servlet>
    <servlet-name>WeatherApiServlet</servlet-name>
    <servlet-class>com.weatherforecast.servlet.WeatherApiServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>WeatherApiServlet</servlet-name>
    <url-pattern>/api/weather</url-pattern>
  </servlet-mapping>

  <!-- Favorite Servlet -->
  <servlet>
    <servlet-name>FavoriteServlet</servlet-name>
    <servlet-class>com.weatherforecast.servlet.FavoriteServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>FavoriteServlet</servlet-name>
    <url-pattern>/favorites</url-pattern>
  </servlet-mapping>

  <!-- User Servlet -->
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.weatherforecast.servlet.UserServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.weatherforecast.servlet.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Logout Servlet -->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.weatherforecast.servlet.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <!-- News Servlet -->
  <servlet>
    <servlet-name>NewsServlet</servlet-name>
    <servlet-class>com.weatherforecast.servlet.NewsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>NewsServlet</servlet-name>
    <url-pattern>/news</url-pattern>
  </servlet-mapping>

  <!-- Admin News Servlet -->
  <servlet>
    <servlet-name>AdminNewsServlet</servlet-name>
    <servlet-class>com.weatherforecast.servlet.AdminNewsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AdminNewsServlet</servlet-name>
    <url-pattern>/admin/news</url-pattern>
  </servlet-mapping>

  <!-- Error Pages -->
  <error-page>
    <error-code>404</error-code>
    <location>/index.jsp</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/index.jsp</location>
  </error-page>
</web-app>